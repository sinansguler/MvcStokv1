@using MvcStokv1.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("index","Musteri",FormMethod.Get))
            {
                <p>
                    <b>Aranacak Müşteri Adı: </b>@Html.TextBox("p")
                    <input type="submit"  value="Ara"/>
                </p>
            }

<table class="table table-bordered">
    <tr>
        <th> Müşteri Id</th>
        <th> Müşteri Adı</th>
        <th> Müşteri Soyadı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Alert</th>

    </tr>

    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@item.MUSTERIID</td>
                <td>@item.MUSTERIAD</td>
                <td>@item.MUSTERISOYAD</td>
                <td><a href="/Musteri/Sil/@item.MUSTERIID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Musteri/MusteriGetir/@item.MUSTERIID" class="btn btn-success">Güncelle</a></td>
                <td>@Html.ActionLink("Sil Butonu", "SIL", new { id=item.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçten Silmek İstiyor Musunuz?')" })</td>
            </tr>

        }
    </tbody>

</table>

<a href="/Musteri/YeniMusteri" class="btn btn-primary"> Yeni Müşteri Ekle</a>

